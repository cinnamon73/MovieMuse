# TMDB API Configuration
TMDB_API_KEY=your_tmdb_api_key_here
TMDB_BASE_URL=https://api.themoviedb.org/3

# Server Configuration
PORT=3001
NODE_ENV=development

# Cache Configuration
PLATFORM_CACHE_TTL=86400
QUERY_CACHE_TTL=600 

# Amazon PA-API (Product Advertising API)
# Required to fetch direct Prime Video detail links with affiliate tagging
AMZN_PARTNER_TAG=yourtag-20
AMZN_PARTNER_TYPE=Associates
AMZN_ACCESS_KEY=YOUR_AWS_ACCESS_KEY_ID
AMZN_SECRET_KEY=YOUR_AWS_SECRET_ACCESS_KEY
AMZN_MARKETPLACE=US # e.g., US, GB, DE, FR, IT, ES, CA, AU, JP, IN, BR, NL, SE, PL, MX